<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/set_hand_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_replay_black_24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hand_anim"
            android:scaleType="centerInside"
            android:id="@+id/hand_anim_image_view"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:backgroundTint="#FFEB3B"
            android:scaleType="fitCenter"
            android:src="@drawable/com_scissors"
            android:id="@+id/scissors_button"
            android:onClick="button_click"
            android:tag="1"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:backgroundTint="#FFEB3B"
            android:scaleType="fitCenter"
            android:src="@drawable/com_rock"
            android:id="@+id/rock_button"
            android:onClick="button_click"
            android:tag="2"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:backgroundTint="#FFEB3B"
            android:scaleType="fitCenter"
            android:src="@drawable/com_paper"
            android:id="@+id/paper_button"
            android:onClick="button_click"
            android:tag="3"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:backgroundTint="#FFEB3B"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_replay_black_24dp"
            android:id="@+id/replay_button"
            android:onClick="button_click"/>

    </LinearLayout>

</LinearLayout>